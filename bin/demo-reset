#!/bin/bash
/etc/init.d/demo.taracot.org stop
rm -rf /var/www/taracot/data/www/demo.taracot.org/
mkdir /var/www/taracot/data/www/demo.taracot.org/
/usr/local/lib/node_modules/taracotjs-generator/bin/taracotjs-silent /var/www/taracot/data/www/demo.taracot.org/
/usr/local/bin/npm install --silent --prefix /var/www/taracot/data/www/demo.taracot.org/
chown taracot:taracot -R /var/www/taracot/data/www/demo.taracot.org/
cd /var/www/taracot/data/www/demo.taracot.org/bin/
/usr/local/bin/node /var/www/taracot/data/www/demo.taracot.org/bin/install --mongo mongodb://demo:password@localhost/taracotjs_demo --silent
/usr/local/bin/node /var/www/taracot/data/www/demo.taracot.org/bin/uninstall --keepstats --silent
/usr/local/bin/node /var/www/taracot/data/www/demo.taracot.org/bin/install --mongo mongodb://demo:password@localhost/taracotjs_demo --port 7071 --demo --silent
/etc/init.d/demo.taracot.org start