<div class="uk-grid">
    <div class="uk-width-large-2-10 uk-width-medium-3-10 uk-width-small-1-1">
        <ul class="uk-nav uk-nav-side uk-width-1-1" data-uk-switcher="{connect:'#taracot_social_pages'}">
            <li class="uk-active"><a href="#">!{root.lang.__('my_page')}</a>
            </li>
            <li><a href="#">!{root.lang.__('my_friends')}</a>
            </li>
            <li><a href="#">!{root.lang.__('my_invitations')}</a>
            </li>
            <li><a href="#">!{root.lang.__('messages')}</a>
            </li>
            <li><a href="#">!{root.lang.__('search_for_people')}</a>
            </li>
        </ul>
    </div>
    <div class="uk-width-large-8-10 uk-width-medium-7-10 uk-width-small-1-1">
        <div class="uk-margin-top uk-hidden-medium uk-hidden-large"></div>
        <ul id="taracot_social_pages" class="uk-switcher">
            <li>
                <div>
                    <img src="!{root._current_user.avatar}" alt="" class="taracot-mypage-avatar">
                    <div class="taracot_social_header" id="taracot_social_my_page">!{root._current_user.name}</div>
                    <div>!{root.lang.__('regdate')}: !{root._current_user.regdate_text}</div>
                </div>
            </li>
            <li>
                <div class="taracot_social_header" id="taracot_social_my_friends">!{root.lang.__('my_friends')}</div>
            </li>
            <li>
                <div class="taracot_social_header" id="taracot_social_my_invitations">!{root.lang.__('my_invitations')}</div>
            </li>
            <li>
                <div class="taracot_social_header" id="taracot_social_messages">!{root.lang.__('messages')}</div>
            </li>
            <li>
                <div id="search_for_people_form_wrap">
                    <div class="taracot_social_header" id="taracot_social_search_for_people">!{root.lang.__('search_for_people')}</div>
                    <div>!{root.lang.__('enter_username_realname_or_email')}:</div>
                    <div class="uk-form">
                        <fieldset>
                            <div class="uk-form-row">
                                <input type="text" placeholder="" class="uk-width-8-10" id="search_for_people_query">
                                <button class="uk-button" id="btn_search_for_people"><i class="uk-icon-search"></i>
                                </button>
                            </div>
                        </fieldset>
                    </div>
                    <div id="search_for_people_res" class="uk-margin-top"></div>
                </div>
                <div id="search_for_people_user_wrap">
                </div>
            </li>
        </ul>
    </div>
</div>
<script>
var _lang_vars = {
        ajax_failed: "!{root.lang.__('ajax_failed')}",
        regdate: "!{root.lang.__('regdate')}",
        unknown_regdate: "!{root.lang.__('unknown_regdate')}"
    },
    current_locale = "!{root.locale}",
    current_user = "!{root.current_user}";
</script>

<script src="/js/jquery.medved.loading.js"></script>
<script src="/js/moment.min.js"></script>
<script src="/modules/social/js/social.js"></script>
